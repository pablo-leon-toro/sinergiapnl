---
import ImgPerfil from "@components/atoms/ImgPerfil.astro";
import RectLine from "@components/atoms/RectLine.astro";

interface Props {
    texto: string;
    nombre: string;
    cargo: string;
    empresa: string;
    imgPerfil: string;
}

const { texto, nombre, cargo, empresa, imgPerfil } = Astro.props;
---

<div class="cliente-txt-card">
    <div class="txt-cliente">
        <p>
            “{texto}”
        </p>
    </div>
    <div class="card-cliente">
        <div class="img-cliente">
            <ImgPerfil src={imgPerfil} />
        </div>
        <div class="info-cliente">
            <h3>{nombre}</h3>
            <p class="cargo">{cargo}</p>
            <p><strong>{empresa}</strong></p>
            <RectLine height=".6rem" background="var(--color-blue-1)" />
        </div>
    </div>
</div>

<style>
    .cliente-txt-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;

        gap: 1rem;

        background: var(--color-max-white);
        padding: 1.4rem 1.4rem;

        box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.16);
        transition:
            transform 0.3s,
            box-shadow 0.3s;
    }

    .cliente-txt-card:hover {
        transform: translateY(-5px);
        box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.16);
    }

    .txt-cliente {
        font-style: italic;
    }

    .card-cliente {
        margin-top: 1.2rem;
        display: grid;
        grid-template-columns: minmax(120px, 3fr) 5fr;
        gap: 0.6rem;
    }

    .info-cliente {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: .4rem;
        padding: 0.5rem;

        & .cargo {
            margin: 0rem;
            min-height: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
        }
    }

    h3 {
        margin: 0rem;
        font-size: min(calc(0.7rem + 0.4vw), 18px);
    }
    p {
        margin: 0rem;
        font-size: min(calc(0.7rem + 0.1vw), 13px);
    }

    .img-cliente {
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
